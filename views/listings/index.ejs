<%- layout('/layouts/boilerplate') -%>
<!-- <h3>All Listings</h3>
-->
<style>
    .filters{
        display: flex;
        flex-wrap: wrap;
    }

    .filter{
        margin-top: 1rem;
        margin-right: 2rem;
        opacity:0.7 ;
    }
    .filter:hover{
            opacity:1;
            cursor: pointer;
        }
    .logo{
        font-size:1.5rem;
        text-align: center;
    }
    .text{
        font-weight: 500;
    }
    .switch{
        margin-left: auto;
        margin-top:2rem;
        margin-right: 2rem;
        font-size:1.5rem;
        border:1px solid black;
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        height:3.5rem;
        width:11rem;
    
      

    }
    a{
        text-decoration: none;
        color: inherit;
    }
    
    

    @media (min-width: 1095px) {
    .filter {
        display:inline; /* Hide filters on medium to small screens */
    }
    .dropdown {
        display: none; /* Hide dropdown on medium to small screens */
    }
}

    @media (max-width: 1094px) {
        .filter {
            display:none; /* Show filters on medium to small screens */
        }
        .dropdown {
            display: block;
            padding:1rem; /* Show dropdown on medium to small screens */
        }
        .dropdown-toggle{
            width: 100%;
            height: 3.5rem;
            font-size:1.5rem;
            border-radius: 1rem;
            padding: 0.5rem 1rem;
        }
        .combo{
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 1rem;
        }
       
    }
    


</style>
<div class="combo">

    <div class="dropdown">
        <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Filter Categories
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/listings/filter?category=trending"><i class="fa-solid fa-fire"></i> Trending</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=rooms"><i class="fa-solid fa-bed"></i> Rooms</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=nature"><i class="fa-solid fa-leaf"></i> Nature</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=mountain"><i class="fa-solid fa-mountain-city"></i> Mountain</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=beach"><i class="fa-solid fa-umbrella-beach"></i> Beach</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=citylife"><i class="fa-solid fa-city"></i> CityLife</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=castle"><i class="fa-solid fa-chess-rook"></i> Castle</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=camping"><i class="fa-solid fa-campground"></i> Camping</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=farm"><i class="fa-solid fa-tractor"></i> Farm</a></li>
          <li><a class="dropdown-item" href="/listings/filter?category=arctic"><i class="fa-solid fa-snowflake"></i> Arctic</a></li>
        </ul>
      </div>
      
  

<div class="filters">
    <div class="filter">
        <a href="/listings/filter?category=trending">
            <div class="logo"><i class="fa-solid fa-fire"></i></div>
            <p class="text">Trending</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=rooms">
            <div class="logo"><i class="fa-solid fa-bed"></i></div>
            <p class="text">Rooms</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=nature">
            <div class="logo"><i class="fa-solid fa-leaf"></i></div>
            <p class="text">Nature</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=mountain">
            <div class="logo"><i class="fa-solid fa-mountain-city"></i></div>
            <p class="text">Mountain</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=beach">
            <div class="logo"><i class="fa-solid fa-umbrella-beach"></i></div>
            <p class="text">Beach</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=citylife">
            <div class="logo"><i class="fa-solid fa-city"></i></div>
            <p class="text">CityLife</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=castle">
            <div class="logo"><i class="fa-solid fa-chess-rook"></i></div>
            <p class="text">Castle</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=camping">
            <div class="logo"><i class="fa-solid fa-campground"></i></div>
            <p class="text">Camping</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=farm">
            <div class="logo"><i class="fa-solid fa-tractor"></i></div>
            <p class="text">Farm</p>
        </a>
    </div>
    <div class="filter">
        <a href="/listings/filter?category=arctic">
            <div class="logo"><i class="fa-solid fa-snowflake"></i></div>
            <p class="text">Arctic</p>
        </a>
    </div>
    
    <div class="form-check-reverse form-switch switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Inc. Taxes</label>
      </div>
</div> 
</div>


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4">
    <% for (let listing of data){ %>
        <div class="col">
            <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
                <div class="card index-listing-card">
                    <img class="card-img-top" src="<%= listing.image.url %>" alt="<%= listing.title %>">
                    <div class="card-body">
                        <p class="card-text fw-bold">
                            <%= listing.title %><br>
                            <span>&#8377;<%= listing.price.toLocaleString("en-IN") %>/day</span>
                            <i class="tax-info" style="display:none">&nbsp; &nbsp;+<%= listing.gst %>% GST</i>

                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>
<!-- <form method="GET" action="/listings/new">
    <button>Add New Listing</button>
</form> -->

<script>
    const toggler=document.getElementById("switchCheckDefault");
    toggler.addEventListener("click",()=>{
        let req=document.querySelectorAll(".tax-info");
        for(items of req){
            if(toggler.checked){
                items.style.display="inline";
            }else{
                items.style.display="none";
            }
        }
       
    })
</script>
